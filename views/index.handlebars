{{> banner}}
<section class="container">
    {{#each articles}}
    <div class="row">
      <div class="col s12 m8 offset-m2">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{this.title}}</span>
            <p>{{this.byline}}</p>
            <p>{{this.synopsis}}</p>
          </div>
          <div class="card-action">
            <a href="/article/{{this._id}}">Comments ({{this.comments.length}})</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
</section>
{{#unless articles}}
{{> welcomeMessage}}
{{/unless}}