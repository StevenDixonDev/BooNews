{{> banner}}
<section class="content">
  <a href="/">Go Back</a>
  <div class="card">
    <div class="card-content">
      <p>{{article.title}}</p>
      <p>{{article.byline}}</p>
      <p>{{article.synopsis}}</p>
    </div>
    <div class="card-footer">
      <div class="article-comment-wrapper">
        {{#each article.comments}}
        {{> comment comment=this.data}}
        {{/each}}
        {{#unless article.comments}}
          <p>No comments</p>
        {{/unless}}
      </div>
    </div>
  </div>
</section>