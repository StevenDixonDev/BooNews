{{> banner}}
<section class="content container">
  <a href="/">Go Back</a>

  <div class="row valign-wrapper">
    <div class="col s12 m8 offset-m2">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{article.title}}</span>
          <p>{{article.byline}}</p>
          <hr />
          <p>{{article.synopsis}}</p>
          <br />
          <p>Source: </p>
          <a href="{{article.url}}" target="_Blank">Link</a>
        </div>
        <div class="card-action">
          <label for="textarea1">Comment:</label>
          <textarea id="comment" class="materialize-textarea" rows="2"></textarea>
          <button class="btn waves-effect waves-light yellow darken-4" id="submit-comment" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>

        <div class="article-comment-wrapper">
          {{#if article.comments}}
          <ul class="comments-list">
            {{#each article.comments}}
              {{> comment comment=this}}
            {{/each}}
          </ul>
          {{/if}}


          {{#unless article.comments}}
          <p>No comments</p>
          {{/unless}}


        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById("submit-comment").addEventListener("click", function (e) {
    console.log("test");
    e.preventDefault();
    let data = document.getElementById("comment").value.trim();
    console.log(data)
    let id = "{{article._id}}";
    fetch("/api/addcomment/"+id, {
      method: 'POST',
      body: JSON.stringify({data: data}),
      headers: {
      'Content-Type': 'application/json'
    }
    })
    .then(res => document.location.reload(true));
  });
</script>